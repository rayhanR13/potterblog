<div>
    <label for="blog-title">Title</label>
    <input type="text" id="blog-title" name="title" value="<%= blog.title %>">
</div>
<div>
    <label for="blog-snippet">Snippet</label>
    <input type="text" id="blog-snippet" name="snippet" value="<%= blog.snippet %>">
</div>
<div>
    <label for="blog-body">Blog Body</label>
    <textarea id="blog-body" name="body" cols="30" rows="10"><%= blog.body %></textarea>
</div>